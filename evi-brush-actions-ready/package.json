{
  "name": "evi-brush-desktop",
  "version": "0.1.0",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",

    "directories": {
      "output": "dist",
      "buildResources": "build"
    },

    "files": [
      "**/*",
      "!**/*.log",
      "!**/*.md",
      "!.git/**",
      "!.github/**",
      "!node_modules/.cache/**"
    ],

    /* 關鍵：把整個 resources/python 連同 venv、pbs、models 都打進包 */
    "extraResources": [
      { "from": "resources/python", "to": "resources/python", "filter": ["**/*"] }
    ],

    /* extraResources 已將 Python 放在 app.asar 外側，這裡不用再特別解壓 */
    "asar": true,
    "asarUnpack": [],

    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop"
    }
  }
}
