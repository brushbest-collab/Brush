{
  "name": "evi-brush-desktop",
  "version": "0.1.1",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "directories": { "output": "dist" },
    "files": [
      "**/*",
      "!logs/**",
      "!.git/**",
      "!.github/**",
      "!**/*.log",
      "!**/*.md"
    ],
    "extraResources": [
      { "from": "resources/python", "to": "resources/python", "filter": ["**/*"] }
    ],
    "asar": true,
    "asarUnpack": ["python/**"],
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
