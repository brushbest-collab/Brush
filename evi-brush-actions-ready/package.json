{
  "name": "evi-brush-desktop",
  "version": "0.5.0",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64",
    "release": "electron-builder --win --x64 --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron": "^30.5.1",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "executableName": "evi-brush-desktop",
    "productFilename": "evi-brush-desktop",
    "directories": {
      "output": "dist"
    },

    "files": [
      "**/*",
      "!python/venv/**",
      "!python/models/**",
      "!logs/**",
      "!.github/**",
      "!**/*.log",
      "!**/*.md"
    ],

    "extraResources": [
      { "from": "python/models", "to": "resources/python/models", "filter": ["**/*"] }
    ],

    "asar": true,
    "asarUnpack": ["python/**"],

    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"],
      "shortcutName": "EVI Brush Desktop"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop"
    },

    "publish": [
      { "provider": "github" }
    ]
  }
}
