{
  "name": "evi-brush-desktop",
  "version": "0.1.0",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win nsis portable zip --x64 --publish never"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "build/**",
      "python/**",
      "!python/models/**",
      "!python/venv/**",
      "!**/*.log",
      "!**/*.md",
      "!.git/**",
      "!.github/**"
    ],
    "extraResources": [
      { "from": "python/pbs", "to": "python/pbs" }
    ],
    "asar": true,
    "asarUnpack": [
      "python/**"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "artifactName": "EVI-Brush-Desktop-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop"
    }
  }
}
