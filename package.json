{
  "name": "evi-brush-desktop",
  "version": "1.0.0",
  "description": "EVI Brush Desktop",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "start:dev": "set ELECTRON_START_URL=http://localhost:5173&& electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.epfootwear.evi-brush-desktop",
    "productName": "EVI Brush Desktop",
    "directories": {
      "output": "dist"
    },
    "asar": true,

    /* 需要的檔案（原本有的保留），前端輸出視你的實際為 dist 或 build */
    "files": [
      "main.js",
      "preload.cjs",
      "index.html",
      "dist/**",
      "build/**",
      "!node_modules/.cache/**"
    ],

    /* ✅ 把 python 整包放到 resources/python（asar 外） */
    "extraResources": [
      {
        "from": "python/",
        "to": "python",
        "filter": ["**/*"]
      }
    ],

    /* 若你有把 python 放在 app 內也可保險性地解包 */
    "asarUnpack": [
      "python/**"
    ],

    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "artifactName": "evi-brush-desktop-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
