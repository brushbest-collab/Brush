{
  "name": "evi-brush-desktop",
  "version": "1.0.0",
  "description": "EVI Brush Desktop",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "start:dev": "set ELECTRON_START_URL=http://localhost:5173&& electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.epfootwear.evi-brush-desktop",
    "productName": "EVI Brush Desktop",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.cjs",
      "index.html",
      "dist/**",
      "build/**",
      "!node_modules/.cache/**"
    ],
    "extraResources": [
      {
        "from": "python/",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "python/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "evi-brush-desktop-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
