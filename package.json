{
  "name": "evi-brush-desktop",
  "version": "1.0.0",
  "description": "EVI Brush Desktop",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "start:dev": "set ELECTRON_START_URL=http://localhost:5173&& electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.epfootwear.evi-brush-desktop",
    "productName": "EVI Brush Desktop",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "files": [
      "main.js",
      "preload.cjs",
      "index.html",
      "dist/**",
      "build/**",
      "!node_modules/.cache/**"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "evi-brush-desktop-${version}-Setup.${ext}"
    }
  }
}
