{
  "name": "evi-brush-desktop",
  "version": "0.2.0",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64 --publish never",
    "clean": "rimraf dist out node_modules/.cache"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "got": "^12.6.1",
    "progress-stream": "^2.0.0",
    "7zip-bin": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "build/**",
      "!**/*.map",
      "!**/*.md",
      "!.git/**",
      "!.github/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/7zip-bin/**"
    ],
    "directories": {
      "output": "dist"
    },
    "extraResources": [],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop"
    }
  }
}
