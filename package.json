{
  "name": "evi-brush-desktop",
  "version": "0.1.0",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64 --publish never",
    "dist:portable": "electron-builder --win portable --x64 --publish never",
    "release": "electron-builder --win --x64 --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "7zip-bin": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "artifactName": "EVI-Brush-Desktop-${version}-${arch}.${ext}",

    "directories": {
      "output": "dist"
    },

    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "build/**",
      "!python/venv/**",
      "!python/models/**",
      "!**/*.log",
      "!**/*.md",
      "!.git/**",
      "!.github/**"
    ],

    "extraResources": [
      { "from": "python/pbs", "to": "python/pbs" }
    ],

    "asar": true,
    "asarUnpack": ["python/**"],

    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },

    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true,
      "uninstallDisplayName": "EVI Brush Desktop"
    },

    "portable": {
      "artifactName": "EVI-Brush-Desktop-Portable-${version}-${arch}.exe"
    },

    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
