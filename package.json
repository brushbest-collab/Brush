{
  "name": "evi-brush-desktop",
  "version": "0.2.1",
  "description": "EVI Brush Desktop",
  "main": "main.js",
  "author": "brushbest-collab",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64 --publish never",
    "dist:nsis": "electron-builder --win nsis --x64 --publish never",
    "dist:portable": "electron-builder --win portable --x64 --publish never"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.evi.brush.desktop",
    "productName": "EVI Brush Desktop",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "resources/**"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "resources/**"
    ],
    "win": {
      "icon": "resources/icon.ico",
      "target": ["nsis", "portable"]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "EVI Brush Desktop",
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
